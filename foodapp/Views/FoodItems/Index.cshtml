@model IEnumerable<FoodApp.Models.FoodItem>

<h1>Food Items</h1>

<p>
    <a asp-action="Create">Add New Item</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model)
{
    <tr>
        <td>@Html.DisplayFor(modelItem => item.Name)</td>
        <td>@Html.DisplayFor(modelItem => item.Description)</td>
    </tr>
}
    </tbody>
</table>
